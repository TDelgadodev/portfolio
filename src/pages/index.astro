---
import Badge from "../components/Badge.astro";
import Layout from "../layouts/Layout.astro";
import LinkedInIcon from "../components/icons/LinkedIn.astro";
import SocialPill from "../components/icons/SocialPill.astro";
import GithubIcon from "../components/icons/Github.astro";
import EmailIcon from "../components/icons/Email.astro";
import Experience from "../components/Experience.astro";
import Projects from "../components/Projects.astro";
import SectionContainer from "../components/SectionContainer.astro";
import Briefcase from "../components/icons/Briefcase.astro";
import CodeIcon from "../components/icons/Code.astro";
---

<Layout
  title="Portfolio de thiago - Desarrollador y Programador Web Fullstack"
  description="Bienvenido al portfolio de Thiago Delgado, un apasionado desarrollador web Fullstack de Argentina, Buenos Aires. Especializado en la creación de aplicaciones y soluciones únicas. Descubre su experiencia y proyectos. ¡Conéctate con Thiago a través de LinkedIn, Github o por correo electrónico!"
>
  <main class="px-4">
    <SectionContainer class="py-44 pb-32">
      <img
        class="rounded-full size-12 mb-4"
        src="/avatar.png"
        alt="portfolio logo"
      />
      <h1
        class="text-white text-3xl md:text-4xl lg:text-5xl font-bold flex flex-row gap-x-4 pb-6 lg:pb-10"
      >
        Hey, soy thiago 
          <a
            href="https://www.linkedin.com/in/tdelgadodev/"
            target="_blank"
            rel="noopener"
            class="flex justify-center items-center"
          >
            <Badge>Estoy disponible para trabajar</Badge>
          </a>
        </>
      </h1>
      <h2 class="text-xl lg:text-2xl opacity-80 text-wrap max-w-[700px]">
        Desarrollador web Fullstack de Argentina, Buenos Aires. Especializado en
        crear aplicaciones y soluciones unicas.
      </h2>

      <nav class="flex gap-4 mt-5 flex-wrap">
        <SocialPill href="https://www.linkedin.com/in/tdelgadodev/">
          <LinkedInIcon class="size-4 md:size-6" />
          LinkedIn
        </SocialPill>
        <SocialPill href="https://github.com/TDelgadodev">
          <GithubIcon class="size-4 md:size-6" />
          Github
        </SocialPill>
        <SocialPill href="mailto:thiagodelgado.dev@gmail.com">
          <EmailIcon class="size-4 md:size-6" />
          thiagodelgado.dev@gmail.com
        </SocialPill>
      </nav>
    </SectionContainer>
    <SectionContainer id="experiencia">
      <h2 class="text-3xl font-semibold mb-4 flex gap-x-3 items-center">
        <Briefcase class="size-7" />
        Experiencia Laboral
      </h2>
      <Experience />
    </SectionContainer>
    <SectionContainer id="proyectos">
      <h2 class="text-3xl font-semibold mb-4 flex gap-x-3 items-center">
        <CodeIcon class="size-7" />
        Proyectos
      </h2>
      <Projects />
    </SectionContainer>
  </main>
</Layout>

