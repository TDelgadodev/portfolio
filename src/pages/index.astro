---
import Badge from "../components/Badge.astro";
import Layout from "../layouts/Layout.astro";
import LinkedInIcon from "../components/icons/LinkedIn.astro";
import SocialPill from "../components/icons/SocialPill.astro";
import GithubIcon from "../components/icons/Github.astro";
import EmailIcon from "../components/icons/Email.astro";
---

<Layout
  title="Portfolio de thiago - Desarrollador y Programador Web Fullstack"
  description="Bienvenido al portfolio de Thiago Delgado, un apasionado desarrollador web Fullstack de Argentina, Buenos Aires. Especializado en la creación de aplicaciones y soluciones únicas. Descubre su experiencia y proyectos. ¡Conéctate con Thiago a través de LinkedIn, Github o por correo electrónico!"
>
  <main>
    <section class="w-full lg:w-[740px] mx-auto py-44">
      <img
        class="rounded-full size-12 mb-4"
        src="/avatar.png"
        alt="portfolio logo"
      />
      <h1 class="text-white text-5xl font-bold flex flex-row gap-x-4 pb-10">
        Hey, soy thiago <div class="flex justify-center items-center">
          <a
            href="https://www.linkedin.com/in/tdelgadodev/"
            target="_blank"
            rel="noopener"
            class="flex justify-center items-center"
          >
            <Badge>Estoy disponible para trabajar</Badge>
          </a>
        </div>
      </h1>
      <h2 class="text-2xl opacity-80 text-wrap">
        Desarrollador web Fullstack de Argentina, Buenos Aires. Especializado en
        crear aplicaciones y soluciones unicas.
      </h2>

      <nav class="flex gap-x-4 mt-5">
        <SocialPill href="https://www.linkedin.com/in/tdelgadodev/">
          <LinkedInIcon class="size-6" />
          LinkedIn
        </SocialPill>
        <SocialPill href="https://github.com/TDelgadodev">
          <GithubIcon class="size-6" />
          Github
        </SocialPill>
        <SocialPill href="mailto:thiagodelgado.dev@gmail.com">
          <EmailIcon class="size-6" />
          thiagodelgado.dev@gmail.com
        </SocialPill>
      </nav>
    </section>
  </main>
</Layout>

