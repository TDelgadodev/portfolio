---
import ReactIcon from "./icons/React.astro";
import JavascriptIcon from "./icons/Javascript.astro";
import BootstrapIcon from "./icons/Bootstrap.astro";
import MaterialUIIcon from "./icons/MaterialUI.astro";
import ExpressIcon from "./icons/Express.astro";
import NodejsIcon from "./icons/NodeJS.astro";
import HTMLIcon from "./icons/HTML.astro";
import CSSIcon from "./icons/CSS.astro";
import SequelizeIcon from "./icons/Sequelize.astro";
import DemoICon from "@/components/icons/Demo.astro";
import GithubIcon from "@/components/icons/Github.astro";
import LinkButton from "./LinkButton.astro";

const TAGS = {
  HTML: {
    name: "HTML5",
    class: "bg-orange-500 text-black",
    icon: HTMLIcon,
  },
  CSS: {
    name: "CSS",
    class: "bg-blue-500 text-white",
    icon: CSSIcon,
  },
  Javascript: {
    name: "Javascript",
    class: "bg-yellow-600 text-black",
    icon: JavascriptIcon,
  },
  Nodejs: {
    name: "Node.js",
    class: "bg-green-800 text-white",
    icon: NodejsIcon,
  },
  Express: {
    name: "Express",
    class: "bg-black-500 text-white",
    icon: ExpressIcon,
  },
  Sequelize: {
    name: "Sequelize",
    class: "bg-gray-800 text-white",
    icon: SequelizeIcon,
  },
  React: {
    name: "React",
    class: "bg-[#003159] text-white",
    icon: ReactIcon,
  },
  Bootstrap: {
    name: "Bootstrap",
    class: "bg-indigo-800 text-white",
    icon: BootstrapIcon,
  },
  MaterialUI: {
    name: "MaterialUI",
    class: "bg-blue-900 text-white",
    icon: MaterialUIIcon,
  },
};

const PROJECTS = [
  {
    title: "E-commerce Lowcost AR",
    description:
      "El ecommerce Lowcost AR es un proyecto que busca la experiencia de compra en línea mas comodo y eficiente para el cliente. Con un enfoque en ofrecer productos asequibles, el sitio web proporciona una interfaz de usuario atractiva y receptiva, permitiendo a los usuarios explorar productos de distintas catergorias.",
    link: "https://lowcostarg.com.ar/",
    github: "https://github.com/TDelgadodev/Low_Cost_Frontend",
    image: "/projects/svgl.webp",
    tags: [
      TAGS.Javascript,
      TAGS.Nodejs,
      TAGS.Express,
      TAGS.React,
      TAGS.Bootstrap,
      TAGS.MaterialUI,
    ],
  },
  {
    title: "Desarrollo E-Commerce 'HyperStore'",
    description:
      "Proyecto integrador realizado durante el curso en Digital House. Se desarrolló un E-Commerce completo llamado 'HyperStore', abarcando desde el maquetado hasta la implementación de funcionalidades clave.",
    link: "",
    github: "https://github.com/Hofty95/Grupo_3_HyperStore",
    image: "/projects/20shots_so.webp",
    tags: [
      TAGS.HTML,
      TAGS.CSS,
      TAGS.Bootstrap,
      TAGS.Javascript,
      TAGS.Nodejs,
      TAGS.Express,
      TAGS.Sequelize,
    ],
  },
];
---

<style>
  .truncate {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }
</style>

<div class="flex flex-col gap-y-16">
  {
    PROJECTS.map(({ image, title, description, tags, link, github }) => (
      <article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
        <div class="w-full md:w-1/2">
          <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
            <img
              alt="Recién llegado vs 5 años en Nueva Zelanda"
              class="object-cover object-top w-full h-56 transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105"
              loading="lazy"
              src={image}
            />
          </div>
        </div>

     <div class="w-full md:w-1/2 md:max-w-lg">
        <h3 class="text-2xl font-bold text-gray-800 dark:text-gray-100">
          {title}
        </h3>
        <div class="flex flex-wrap mt-2">
          {tags.map((tag) => (
            <span
              class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 mb-2`}
            >
              <tag.icon class="size-4" />
              {tag.name}
            </span>
          ))}
        </div>
        <div class="mt-2 text-gray-700 dark:text-gray-400">
          {description}
        </div>
        <footer class="flex items-end justify-start mt-4 gap-x-4">
          {github && (
            <LinkButton href={github}>
              <GithubIcon class="size-6" />
              Code
            </LinkButton>
          )}
          {link && (
            <LinkButton href={link}>
              <DemoICon class="size-4" />
              Preview
            </LinkButton>
          )}
        </footer>
      </div>
      </article>
    ))
  }
</div>
